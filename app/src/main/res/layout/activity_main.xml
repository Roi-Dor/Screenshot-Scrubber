<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- App Icon/Logo -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_secure"
        android:contentDescription="ScreenScrubber Logo" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScreenScrubber Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- App Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Automatically detects and censors sensitive data in your screenshots"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Status Display -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âšª INACTIVE - Screenshots not protected"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_marginBottom="24dp" />

    <!-- Main Toggle Button -->
    <Button
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start Protection"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_marginBottom="16dp" />

    <!-- Test Data Button -->
    <Button
        android:id="@+id/testDataButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Open Test Data Screen"
        android:textSize="16sp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginBottom="32dp" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions:\n1. Start protection\n2. Open test data screen\n3. Take a screenshot\n4. Check your notifications"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout>